{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug tap-shopify",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tap_shopify/__init__.py",
      "cwd": "${workspaceFolder}",
      "args": [
        "-c",
        "config.json",
        "--catalog",
        "catalog.json"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/tap-shopify:${workspaceFolder}/tap-shopify/venv/lib/python3.12/site-packages"
      },
      "python": "${workspaceFolder}/venv/bin/python"  // adjust path,
    }
  ]
}